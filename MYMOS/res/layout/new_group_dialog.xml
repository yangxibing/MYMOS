<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_group"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/chat_contact" 
    android:layout_gravity="bottom">
   

    <TextView
        android:id="@+id/new_group_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="新建群組" />

    <EditText
        android:id="@+id/input_groupName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/new_group_dialog"
        android:inputType="text"
        android:layout_centerInParent="true"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:selectAllOnFocus="true"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:textColor="#ff545454"
        android:textSize="16.0sp" />

    <Button
        android:id="@+id/OK"
        android:layout_width="180dp"
        android:layout_height="50.0dip"
         android:layout_alignParentLeft="true"
        android:layout_below="@id/input_groupName"
        android:layout_marginTop="16dp"
        android:text="确定" />
    <Button
        android:id="@+id/cancle"
         android:layout_width="160dp"
        android:layout_height="50.0dip"
        android:layout_toRightOf="@id/OK"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/OK"
          android:layout_marginTop="16dp"
        android:text="取消" />

</RelativeLayout>