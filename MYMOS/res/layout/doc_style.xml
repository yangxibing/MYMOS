<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_contact"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/docStyleRelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_bar"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/doc_style"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/docStyleRelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/docStyleRelativeLayout1"
        android:layout_above="@+id/docStyleRelativeLayout3" >

        <ListView
            android:id="@+id/doc_style_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:divider="@color/chat_contact"
            android:dividerHeight="3dp"
            android:longClickable="true"
            android:scrollbarSize="5dp"
            android:scrollbars="vertical" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/docStyleRelativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingBottom="1dp" >

        <Button
            android:id="@+id/add_doc_style"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_button_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_doc_style"
            android:layout_centerHorizontal="true"
            android:text="@string/new_doc_style"
            android:textColor="@color/black" >
        </TextView>
    </RelativeLayout>

</RelativeLayout>